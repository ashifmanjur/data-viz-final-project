<style type="text/css">
  .wrapper {
    margin-left: auto;
    margin-right: auto;
    width: 800px;
  }

  .map_mesh {
    fill: none;
    stroke: #fff;
    stroke-width: .5px;
    stroke-linejoin: round;
  }

  .map_outline {
    fill: #ddd;
    stroke: #000;
    stroke-width: 1.5px;
  }

  .map_neighbourhood {
    fill: #1f77b4;
  }

  .map_neighbourhood:hover {
    fill: #636363;
    cursor: pointer;
  }

</style>

<div class="album py-5">
  <div class="container">
    <div class="row">
      <!--   center svg in div   -->
      <div class="wrapper"></div>
    </div>
  </div>

  <%= javascript_pack_tag 'toronto_neighborhood', 'data-turbolinks-track': 'reload' %>
</div>