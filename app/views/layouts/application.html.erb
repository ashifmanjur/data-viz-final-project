<!DOCTYPE html>
<html>
  <head>
    <title>DS-8007 Final Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="navbar navbar-dark bg-dark shadow-sm">
        <div class="container d-flex justify-content-between">
          <a href="<%= root_path %>" class="navbar-brand d-flex align-items-center">
            <strong>DS-8007 Final Project</strong>
          </a>
        </div>
      </div>
    </header>

    <main role="main">

      <section class="jumbotron text-center" style="padding: 2rem 2rem !important;margin-bottom: 0px !important;">
        <div class="container">
          <h1>Exploring Toronto Neighbourhoods</h1>
          <p class="lead text-muted">
            Visualizing neighbourhoods in city of Toronto.
          </p>
          <p>
            <%= link_to "Crime Rate", root_path, class: "btn btn-primary my-2" %>
            <%= link_to "Demographics", demographics_path, class: "btn btn-primary my-2" %>
          </p>
        </div>
      </section>

      <%= yield %>
    </main>
  </body>
</html>
